<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= render 'user_info' %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if user_signed_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= paginate @microposts %>
    <% end %>
  </div>
</div>
