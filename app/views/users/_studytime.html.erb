<table class="table">
  <caption id="studytable"><%= link_to "学習時間", user_path(@user.id) %></caption>
  <tbody>
		<tr>
			<th>今日</th>
			<td><%= @daytime %>分</td>
			<th>前日</th>
			<td><%= @daytime_before %>分</td>
		</tr>
		<tr>
			<th>今週</th>
			<td><%= @weektime %>分</td>
			<th>先週</th>
			<td><%= @weektime_before %>分</td>
		</tr>
		<tr>
			<th>今月</th>
			<td><%= @monthtime %>分</td>
			<th>先月</th>
			<td><%= @monthtime_before %>分</td>
		</tr>
		<tr>
			<th>全期間合計</th>
      <!-- ダミー用td２つ -->
      <td></td>
      <td></td>
			<td><%= @total_studytime %>分</td>
		</tr>
	</tbody>
</table>
