<div class="row">
  <aside class="col-md-3">
      <section class="user_info">
        <%= render 'user_info' %>
      </section>
      <section class="stats">
        <%= render 'stats' %>
      </section>
      <section class="micropost_form">
        <%= render 'micropost_form' %>
      </section>
  </aside>
  <div class="col-md-6">
    <h3>タイムライン</h3>
    <%= render 'feed' %>
  </div>
  <div class="col-md-3">
    <h3>学習時間</h3>
    <div class="study_sum">
      <%= @daytime %>
      分/日
    </div>
    <div class="study_sum">
      <%= @weektime %>
      分/週
    </div>
    <div class="study_sum">
      <%= @monthtime %>
      分/月
    </div>
  </div>
</div>
